---
  extends: airbnb/base
  env:
    meteor: true
    node: true
    browser: tru
    es6: true
  globals:
    Accounts: true
    UserAccounts: true
    AutoForm: true
    check: true
    Comments: true
    console: true
    Gifts: true
    HTTP: true
    Meteor: true
    Mongo: true
    Router: true
    SimpleSchema: true
    T9n: true
    Template: true
    toastr: true
    UI: true
    window: true
  rules:
    curly:
      - 2
      - "multi"
    quotes:
      - 2
      - 'single'
      - 'avoid-escape'
    no-console: 0
    no-underscore-dangle: 0
    object-curly-spacing: 0
    key-spacing: 0
    prefer-arrow-callback: 0
    no-nested-ternary: 0
    no-eval: 0
